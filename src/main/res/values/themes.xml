<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.InHunter" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/main_background</item>
        <item name="colorPrimaryVariant">@color/main_background</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

<!--        button-->
        <item name="android:buttonStyle">@style/ButtonRounded</item>
        <item name="toolbarStyle">@style/InHuntToolbarStyle</item>
        <item name="android:toolbarStyle">@style/InHuntToolbarStyle</item>
    </style>

    <style name="InHuntToolbarStyle" parent="Widget.MaterialComponents.Toolbar">
        <item name="titleCentered">true</item>
        <item name="titleTextColor">@color/black</item>
        <item name="android:background">@color/white</item>

    </style>

    <style name="ButtonRounded" parent="Widget.MaterialComponents.Button">
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
    </style>

<!--    style for panel info -->
    <style name="ThemePanel.InHunter" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="cardCornerRadius">@dimen/corner_cards_panel</item>
        <item name="cardElevation">0dp</item>

        <item name="android:backgroundTint">@color/background_panels</item>
        <item name="android:layout_margin">@dimen/global_padding_panels</item>
        <item name="android:buttonStyle">@style/ButtonRounded</item>
    </style>

    <style name="TextInfoFields" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_info_field</item>
    </style>
</resources>